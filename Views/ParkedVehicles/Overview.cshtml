@model Garage2._0.Models.VehicleOverviewViewModel

@{
    ViewData["Title"] = "Overview";
}

<h2>Overview</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Overview" asp-controller="ParkedVehicles" method="post" class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="SearchString" placeholder="Search by Registration Number">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Parking" asp-controller="ParkedVehicles" class="btn btn-success">Check-In</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Overview" asp-route-sortOrder="@Model.NameSortParam">Registration Number</a>
            </th>
            <th>
                <a asp-action="Overview" asp-route-sortOrder="@Model.TimeSortParam">Arrival Time</a>
            </th>

            <th>Details</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model.ParkedVehicles)
        {
        <tr>
            <td>@vehicle.RegistrationNumber</td>
            <td>@vehicle.ArrivalTime</td>
            <td>
                <a asp-action="Details" asp-controller="ParkedVehicles" asp-route-id="@vehicle.Id">Details</a>
            </td>
            <td>
                <a asp-action="Edit" asp-controller="ParkedVehicles" asp-route-id="@vehicle.Id">Edit</a>
            </td>
            <td>
                <a asp-action="Remove" asp-controller="ParkedVehicles" asp-route-id="@vehicle.Id">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>
